.question-errors
  = render 'shared/errors', resource: @question

.question-flash

.attachment-flash

.question
  =render @question

.answer-flash

.answers
  = render @question.answers.best_answer_first

.answer-errors
  = render 'shared/errors', resource: @answer
= form_with model: [@question, @answer], class: 'new-answer' do |f|
  p
    = f.label :body
    = f.text_area :body
  p
    = f.label :files
    = f.file_field :files, multiple: true, direct_upload: true 
  p= f.submit 'To answer'

